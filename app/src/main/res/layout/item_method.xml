<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginStart="@dimen/padding_recycler"
    android:layout_marginTop="@dimen/padding_recycler"
    android:layout_marginEnd="@dimen/padding_recycler"
    android:layout_marginBottom="@dimen/main_space_half_16"
    tools:context=".MethodAdapter"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/tvMethodNumber"
        style="@style/StyleTitle14.Dark.Medium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/spaceBetween"
        tools:text="@string/text_method_number" />

    <TextView
        android:id="@+id/tvMethodItem"
        style="@style/StyleTitle14.Dark.Medium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="@string/text_step_method" />

</LinearLayout>