<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tvMethodItem"
        style="@style/StyleTitle14.Dark.Medium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="@string/text_step_method"
        android:layout_marginStart="@dimen/padding_recycler"
        android:layout_marginTop="@dimen/padding_recycler"
        android:layout_marginEnd="@dimen/padding_recycler"/>

    <com.google.android.material.divider.MaterialDivider
        android:layout_width="match_parent"
        android:layout_height="@dimen/one_pixel"
        android:layout_marginTop="@dimen/main_space_half_16"
        android:layout_marginBottom="@dimen/main_space_half_16"
        app:dividerColor="@color/grey_divider_color"
        app:dividerThickness="@dimen/one_pixel"
        app:dividerInsetStart="@dimen/padding_recycler"
        app:dividerInsetEnd="@dimen/padding_recycler"
        app:lastItemDecorated="false"/>

</LinearLayout>