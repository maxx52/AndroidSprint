<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/card_height"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cvItemCategory"
    android:layout_marginStart="@dimen/main_space_half_16"
    android:layout_marginEnd="@dimen/main_space_half_16"
    android:layout_marginTop="@dimen/main_space_16"
    android:background="@color/white_color"
    android:foreground="?selectableItemBackground"
    android:clickable="true"
    android:focusable="true"
    app:cardCornerRadius="@dimen/main_space_half_16">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/ivCategoryImage"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_of_image_category"
            android:contentDescription="@string/image_of_category_item"
            android:scaleType="centerCrop"
            tools:src="@drawable/bg_categories"/>

        <TextView
            android:id="@+id/tvTitleCategory"
            style="@style/StyleTitle14.Dark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/main_space_half_16"
            android:layout_marginStart="@dimen/main_space_half_16"
            tools:text="@string/burgers"/>

        <TextView
            android:id="@+id/tvCategoryDescription"
            style="@style/StyleTitle12"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/main_space_half_16"
            android:layout_marginStart="@dimen/main_space_half_16"
            tools:text="@string/burger_description"/>

    </LinearLayout>

</androidx.cardview.widget.CardView>