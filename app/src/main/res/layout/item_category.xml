<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="@dimen/card_height"
        android:layout_marginStart="@dimen/main_space_half_16"
        android:layout_marginEnd="@dimen/main_space_half_16"
        android:layout_marginTop="@dimen/main_space_half_16"
        app:cardCornerRadius="@dimen/main_space_half_16"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:clickable="true">
        
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_of_image_category"
            android:contentDescription="@string/image_of_category_item"
            tools:src="@drawable/bg_categories"
            tools:scaleType="center" />

        <TextView
            android:id="@+id/tvTitleCategory"
            style="@style/StyleTitle14.Dark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/height_of_image_category"
            android:paddingTop="@dimen/main_space_half_16"
            android:layout_marginStart="@dimen/main_space_half_16"
            tools:text="@string/burgers" />

        <TextView
            android:id="@+id/tvCategoryDescription"
            style="@style/StyleTitle12"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_top_description"
            android:layout_marginStart="@dimen/main_space_half_16"
            tools:text="@string/burger_description"/>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>