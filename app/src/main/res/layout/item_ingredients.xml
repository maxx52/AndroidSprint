<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginStart="@dimen/padding_recycler"
    android:layout_marginTop="@dimen/padding_recycler"
    android:layout_marginEnd="@dimen/padding_recycler"
    android:layout_marginBottom="@dimen/main_space_half_16"
    tools:context=".ui.IngredientsAdapter"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/tvIngredientName"
        style="@style/StyleTitle14.Dark.Regular"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:text="@string/text_cheese"
        android:layout_weight="2" />

    <TextView
        android:id="@+id/tvIngredientCount"
        style="@style/StyleTitle14.Dark.Regular"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:text="@string/text_100"
        android:layout_weight="1"
        android:gravity="end" />

</LinearLayout>