<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="StyleTitle14" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/white_color</item>
        <item name="android:textSize">@dimen/main_text_size</item>
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="StyleTitle20" parent="StyleTitle14">
        <item name="android:textSize">@dimen/text_size_header</item>
        <item name="android:textColor">@color/title_color</item>
    </style>

    <style name="StyleTitle14.Dark" parent="StyleTitle14">
        <item name="android:textColor">@color/title_blue_color</item>
    </style>

    <style name="StyleTitle14.Dark.Regular" parent="StyleTitle14.Dark">
        <item name="android:fontFamily">@font/montserrat400</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/grey_color</item>
    </style>

    <style name="StyleTitle14.Dark.Medium" parent="StyleTitle14.Dark.Regular">
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="StyleTitle12" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/grey_color</item>
        <item name="android:textSize">@dimen/text_size_12</item>
        <item name="android:fontFamily">@font/montserrat500</item>
    </style>

    <style name="StyleTitle16" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/blue_color</item>
        <item name="android:textSize">@dimen/main_text_size</item>
        <item name="android:fontFamily">@font/montserrat</item>
    </style>

    <style name="StyleTitle16.Dark" parent="StyleTitle16">
        <item name="android:textColor">@color/title_blue_color</item>
    </style>

    <style name="StyleNavButton" parent="Widget.Material3.Button">
        <item name="android:textAppearance">@style/StyleTitle14</item>
        <item name="cornerRadius">@dimen/main_space_half_16</item>
    </style>
</resources>